{
  "name": "challenge",
  "version": "0.8.0",
  "private": true,
  "engines": {
    "node": "5.5.x"
  },
  "scripts": {
    "clean": "rimraf build && mkdir build && mkdir build/server && mkdir build/client",
    "prebuild": "npm run clean",
    "build:css": "lessc client/styles/main.less build/client/styles/main.css",
    "build:css:watch": "watch 'npm run build:css' client/styles/",
    "build:js:frontend": "browserify client/client.js -o build/client/client.js -t [ babelify ]",
    "build:js:frontend:watch": "watch 'npm run build:js:frontend' client/js shared/",
    "build:js:backend": "browserify app.js -o build/server/app.js -t [ babelify ] --node",
    "build:js:backend:watch": "watch 'npm run build:js:backend' server/ shared/",
    "build:resources": "copyfiles -u 1 client/index.html 'client/images/**/*' build/client",
    "build:resources:watch": "watch 'npm run build:resources' client/images",
    "build": "parallelshell 'npm run build:js:backend' 'npm run build:js:frontend' 'npm run build:css' 'npm run build:resources'",
    "build:watch": "parallelshell 'npm run build:css:watch' 'npm run build:js:frontend:watch' 'npm run build:backend:watch' 'npm run build:resources:watch'",
    "test:frontend": "karma start test/client/karma.conf.js",
    "test:frontend:watch": "npm run test:frontend -- --no-single-run",
    "test:backend": "mocha --compilers js:babel-core/register 'test/{server,shared}/**/*.js'",
    "test:backend:watch": "npm run test:backend -- -w",
    "test": "parallelshell 'npm run test:backend' 'npm run test:frontend'",
    "test:watch": "parallelshell 'npm run test:backend:watch' 'npm run test:frontend:watch'",
    "prestart": "npm run build",
    "start": "node build/server/app.js",
    "start:watch": "nodemon --watch server --watch shared --watch client --exec 'npm run start'",
    "debug": "npm run start:watch -- --debug"
  },
  "devDependencies": {
    "chai": "3.4.1",
    "karma": "0.13.19",
    "karma-browserify": "4.3.0",
    "karma-mocha": "0.2.1",
    "karma-mocha-reporter": "1.1.5",
    "karma-phantomjs-launcher": "0.2.3",
    "mocha": "2.3.3",
    "nodemon": "1.8.1",
    "phantomjs": "1.9.18",
    "sinon": "1.17.1",
    "socket.io-client": "1.4.4",
    "watch": "0.17.1"
  },
  "dependencies": {
    "babel-core": "6.4.0",
    "babel-polyfill": "6.3.14",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "bufferutil": "1.2.1",
    "copyfiles": "0.2.1",
    "express": "4.13.3",
    "flux": "2.1.1",
    "glicko2": "0.8.4",
    "less": "2.5.3",
    "lodash": "3.10.1",
    "parallelshell": "2.0.0",
    "react": "0.14.6",
    "react-dom": "0.14.6",
    "rimraf": "2.4.4",
    "utf-8-validate": "1.2.1",
    "uuid": "2.0.1",
    "validate.js": "0.8.0",
    "ws": "1.0.1"
  }
}
